      "id": "password_power_up",
      "title": "Password Power-Up",
      "levels": [
        {
          "level": 1,
          "questions": [
            {
              "id": "password_manager_usage",
              "text": "Do you use a password manager to create and store unique passwords?",
              "priority": 1000,
              "options": [
                {
                  "id": "yes_premium",
                  "text": "Yes, I use a premium manager like 1Password or Bitwarden",
                  "points": 25,
                  "facts": { 
                    "behavior.password_manager.usage": true,
                    "behavior.password_manager.type": "premium"
                  }
                },
                {
                  "id": "yes_browser",
                  "text": "Yes, I use my browser's built-in manager",
                  "points": 15,
                  "facts": { 
                    "behavior.password_manager.usage": true,
                    "behavior.password_manager.type": "browser"
                  }
                },
                {
                  "id": "no_planning",
                  "text": "No, but I'm planning to start using one",
                  "points": 5,
                  "facts": { 
                    "behavior.password_manager.usage": false,
                    "behavior.password_manager.willingness": "interested"
                  }
                },
                {
                  "id": "no_manual",
                  "text": "No, I manage passwords manually",
                  "points": 0,
                  "facts": { 
                    "behavior.password_manager.usage": false,
                    "behavior.password_manager.strategy": "manual"
                  }
                }
              ],
              "tags": ["critical", "high-impact", "password"],
              "description": "Password managers are the #1 security upgrade most people can make",
              "estimatedMinutes": 2
            },
            {
              "id": "password_reuse_frequency",
              "text": "How often do you reuse the same password across different accounts?",
              "priority": 900,
              "options": [
                {
                  "id": "never",
                  "text": "Never - every account has a unique password",
                  "points": 20,
                  "facts": { "behavior.password_reuse.frequency": "never" }
                },
                {
                  "id": "rarely",
                  "text": "Rarely - maybe 2-3 accounts share passwords",
                  "points": 15,
                  "facts": { "behavior.password_reuse.frequency": "minimal" }
                },
                {
                  "id": "sometimes",
                  "text": "Sometimes - I have a few different passwords I rotate",
                  "points": 8,
                  "facts": { "behavior.password_reuse.frequency": "moderate" }
                },
                {
                  "id": "often",
                  "text": "Often - I use the same password for most accounts",
                  "points": 2,
                  "facts": { "behavior.password_reuse.frequency": "high" }
                }
              ],
              "tags": ["critical", "password", "risk-assessment"],
              "description": "Password reuse amplifies the damage from any single breach",
              "estimatedMinutes": 1
            }
          ]
        }
      ]
