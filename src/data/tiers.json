{
  "version": "1.0.0",
  "description": "Tier progression system based on prerequisite facts",
  "tiers": [
    {
      "id": "tier_0",
      "name": "Onboarding",
      "description": "Learning the basics and establishing your security foundation",
      "order": 0,
      "prerequisites": {
        "gates": [
          {
            "all": [
              { "fact": "onboarding.started", "operator": "equals", "value": true }
            ]
          }
        ]
      },
      "scoring": {
        "contributesToScore": false,
        "description": "Foundation setting - not scored"
      },
      "unlocks": {
        "content": ["foundation_questions"],
        "features": ["device_detection", "basic_recommendations"]
      }
    },
    {
      "id": "tier_1", 
      "name": "Shields Up",
      "description": "Browser safety and easy security wins",
      "order": 1,
      "prerequisites": {
        "gates": [
          {
            "all": [
              { "fact": "device.type", "operator": "exists" },
              { "fact": "device.os.primary", "operator": "exists" }
            ]
          }
        ]
      },
      "unlocks": {
        "content": ["browser_security", "quick_wins"],
        "features": ["daily_tasks", "progress_tracking"]
      },
      "badgeInfo": {
